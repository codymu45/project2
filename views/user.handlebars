<div class="clock">
  <button id="clockIn">CLOCK IN</button>
  <div class="countup" id="countup1">
    <span class="timeel hours">00</span>
    <span class="timeel timeRefHours">hours</span>
    <span class="timeel minutes">00</span>
    <span class="timeel timeRefMinutes">minutes</span>
    <span class="timeel seconds">00</span>
    <span class="timeel timeRefSeconds">seconds</span>
  </div>
</div>

<div class="newTaskField">
  <h3 id="newTaskHeader">Add a New Task:</h3>
  <form id="taskForm" action="/" method="POST">
    <input id="taskInput" type="text" name="task"></input>
  </form>
  <button id="addTask">Add</button>
</div>

<hr class="dashboardBreak">
<div class="taskBox">
  <div class="todoTasks">
    <p id="todoHeader">Queue</p>
    <ul class="taskList">
      {{#each tasks}}
        {{#ifEquals status "Queue"}}
          <li id="{{id}}" draggable="true" ondragstart="drag(event)">{{name}}</li>
        {{/ifEquals}}
      {{/each}}
    </ul>
  </div>
  <div class="inProgress">
    <p id="progressHeader">In Progress</p>
    <ul class="taskList">
      {{#each tasks}}
        {{#ifEquals status "inProgress"}}
          <li id="{{id}}" draggable="true" ondragstart="drag(event)">{{name}}</li>
        {{/ifEquals}}
      {{/each}}
    </ul>
  </div>
  <div class="completed">
    <p id="completedHeader">Completed</p>
    <ul class="taskList">
      {{#each tasks}}
        {{#ifEquals status "completed"}}
          <li id="{{id}}" draggable="true" ondragstart="drag(event)">{{name}}</li>
        {{/ifEquals}}
      {{/each}}
    </ul>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/user.js"></script>
<script>
   function drag(ev) {
    // ev.dataTransfer= ev.originalEvent.dataTransfer;
    ev.dataTransfer.setData("text", ev.target.id);
  }
</script>
